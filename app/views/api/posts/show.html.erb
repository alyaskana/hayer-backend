<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @post.deadline %>
</p>

<p>
  <strong>Type:</strong>
  <%= @post.ad_types.pluck(:name).join(", ") %>
</p>

<p>
  <strong>Format:</strong>
  <%= @post.format %>
</p>

<% @post.responses.each do |response| %>
  <%= render 'show_response', response: response %>
<% end %>

<%= render 'responses/form', response: @post.responses.build %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

